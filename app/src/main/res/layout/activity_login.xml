<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F3F3F3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_600sdp"
        android:background="#F3F3F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <EditText
        android:id="@+id/et_email_login"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_32sdp"
        android:hint="Email"
        android:padding="@dimen/_10sdp"
        android:textSize="@dimen/_10ssp"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:background="@drawable/bg_2"
        android:layout_marginBottom="@dimen/_200sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/et_password_login"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_32sdp"
            android:hint="Password"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_10ssp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:background="@drawable/bg_2"
            android:layout_marginBottom="@dimen/_100sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="Login"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
                android:background="@drawable/bg_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_reset_login"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:text="Lupa password? Reset"
                    android:textSize="@dimen/_10ssp"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/_80sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tv_daftar_login"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:text="Tiadak punya akun? Daftar"
                        android:textSize="@dimen/_10ssp"
                        android:textAlignment="center"
                        android:layout_marginBottom="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_500sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>